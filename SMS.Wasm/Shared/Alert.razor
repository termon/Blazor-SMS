@if (ShowAlert)
{
    <div class="alert alert-@Type alert-dismissible fade show m-4" role="alert">
    @Message
    <button type="button" class="close" data-dismiss="alert" aria-label="Close" @onclick="()=>Close()">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
}

@code {
    [Parameter] public string Message { get; set; } = "Alert....";
    [Parameter] public string Type { get; set; } = "info";
    protected bool ShowAlert = false;
       
    public void Close()
    {
        ShowAlert = false;
    }

    public void Show()
    {
        ShowAlert = true;
    }
}
