
<div @onclick="() => OnClickCard.InvokeAsync(null)" class="card m-2" style="width: 18rem;">
    <h5 class="card-title text-center mt-3">
        <i class="material-icons">@Icon</i>
    </h5>
  <div class="card-body">
    <h5 class="card-title">@Title</h5>
    <p>@Message</p>
  </div>
  <div class="card-footer">
      <button class="btn btn-primary btn-sm mt-2 mr-2">Update</button>
      <button class="btn btn-danger btn-sm mt-2">Delete</button>           
  </div>
</div>

@code {
    // Demonstrates how a parent component can supply parameters
    [Parameter]
    public EventCallback<StudentDto> OnClickCard { get; set; }
    
    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Message { get; set; }
}
